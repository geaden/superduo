<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_football_today_score_default_height"
    android:background="@drawable/widget_football_today_score_border"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/football_score_widget"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/widget_crest_size"
                android:layout_height="@dimen/widget_crest_size"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                tools:src="@drawable/manchester_united"
                android:id="@+id/home_crest"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/primary_text"
                tools:text="3:2"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/widget_score_text"
                android:id="@+id/score_textview"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="17:30"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/widget_score_date"
                android:textColor="@color/primary_text"
                android:id="@+id/data_textview"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/widget_crest_size"
                android:layout_height="@dimen/widget_crest_size"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                tools:src="@drawable/chelsea"
                android:id="@+id/away_crest"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>